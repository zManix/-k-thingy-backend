{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "../src",
  "testRegex": ".*\\.spec\\.ts$",
  "testPathIgnorePatterns": ["\\src\\todo"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.{!(module),}.(t|j)s"
  ],
  "coverageDirectory": "/coverage",
  "testEnvironment": "node"
}
